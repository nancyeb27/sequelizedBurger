<header>
	<h1>Eat Da Burger!</h1>
</header>
<div class="wrapper">
	<div id="create-burger">
		<form >
			<input id="burger-name" type="text" name="burger_name" placeholder="Create a burger">
			<button id="submit-btn" type="submit">Add</button>
		</form>
	</div>

	<section id="burgers-container">
		<div id="burgers-available">
			<h2>Burgers Available</h2>
			{{#each burgers}}
				{{#unless this.devoured}}
				  <div class="burger">
				    {{!-- <form class="devour-burger-form" action="/api/burgers/" + {{id}} method="POST"> --}}
				  		<button id = {{id}} data-state ={{this.devoured}} class="eat-btn">EAT</button>
				    {{!-- </form> --}}
						{{burger_name}} <span>#{{id}}</span>
				  </div>
				{{/unless}}
			{{/each}}
		</div>
		<div id="burgers-devoured">
			<h2>Burger Heaven</h2>
			{{#each burgers}}
				{{#if this.devoured}}
				  <div class="burger">{{burger_name}} <span>#{{id}}</span></div>
				{{/if}}
			{{/each}}
		</div>
	</section>
</div>